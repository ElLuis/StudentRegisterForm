<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="staffButtonStyle" parent="android:Widget.DeviceDefault.Button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#bee74f</item>
        <item name="android:fadingEdge">none|horizontal|vertical</item>
    </style>

    <style name="textViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">#5f5f5f</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="infoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">#070707</item>
        <item name="android:textColorHighlight">#1e1919</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="studentInfoStyle" parent="staffButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#513030</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

</resources>
